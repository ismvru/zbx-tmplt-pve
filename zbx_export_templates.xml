                                <key>pve.ct[{#VMID}]</key>
                            </master_item>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{last()}&lt;600</expression>
                                    <name>PVE Ct {#VMID} - {#NAME} uptime &lt; 10m</name>
                                    <priority>WARNING</priority>
                                    <description>Container uptime is &lt; 600s</description>
                                    <dependencies>
                                        <dependency>
                                            <name>PVE Ct {#VMID} - {#NAME} is not running</name>
