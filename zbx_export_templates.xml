                    </graph_prototypes>
                    <host_prototypes>
                        <host_prototype>
                            <host>{#NAME}</host>
                            <name>PVE Ct {#VMID} - {#NAME}</name>
                            <status>DISABLED</status>
                            <discover>NO_DISCOVER</discover>
                            <group_links>
                                <group_link>
                                    <group>
                                        <name>Discovered hosts</name>
                                    </group>
                                </group_link>
                            </group_links>
                            <group_prototypes>
                                <group_prototype>
                                    <name>{#NODE} Containers</name>
                                </group_prototype>
                            </group_prototypes>
