                                        </dependency>
                                    </dependencies>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                        <item_prototype>
                            <name>PVE Ct {#VMID} - {#NAME}</name>
                            <type>HTTP_AGENT</type>
                            <key>pve.ct[{#VMID}]</key>
                            <history>1d</history>
                            <trends>0</trends>
                            <value_type>TEXT</value_type>
