                                    <name>PVE Ct</name>
                                </application>
                            </applications>
                            <preprocessing>
                                <step>
                                    <type>JSONPATH</type>
                                    <params>$.data</params>
                                </step>
                            </preprocessing>
                            <timeout>10s</timeout>
                            <url>https://{$PVE_API_HOST}:{$PVE_API_PORT}/api2/json/nodes/{#NODE}/lxc/{#VMID}/status/current</url>
                            <headers>
                                <header>
                                    <name>Authorization</name>
                                    <value>PVEAPIToken={$PVE_API_TOKEN}</value>
                                </header>
                            </headers>
                        </item_prototype>
                    </item_prototypes>
